<%- include('../_layouts/adminheader'); %>

<h2 class="category-title mt-5"> Kategorien</h2>

<a href="/admin/categories/add-category" class="btn btn-primary">Fügen Sie eine neue Kategorie hinzu</a>
<br><br>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Kategorie</th>
            <th>Ändern</th>
            <th>Löschen</th>
        </tr>
    </thead>

    <tbody>
        <% categories.forEach(function(category){ %>
        <tr>
            <td><%= category.title%></td>
            <td> <a href="/admin/categories/edit-category/<%=category._id%>">Ändern</a> </td>
            <td><a class="confirmDelete" href="/admin/categories/delete-category/<%=category._id%>">Löschen</a></td>
         
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include('../_layouts/adminfooter'); %>