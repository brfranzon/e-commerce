<%- include('../_layouts/adminheader'); %>

<h2 class="page-title"> Products</h2>

<a href="/admin/products/add-product" class="btn btn-primary">Add a new Products</a>
<br><br>

 <!-- <%if(count > 0){%>-->
<table class="table table-striped">

    <thead>
        <tr>
            <th>Products</th>
            <th>Price</th>
            <th>Category</th>
        <!--    <th>Product Image</th>-->
          <!--   <th>Edit</th>-->
              <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        <% products.forEach(function(product){ %>
        <tr>
            <td>t<%= product.title%></td>
            <td><%= parseFloat(product.price).toFixed(2)%></td>
            <td><%= product.category%></td>
       <!--     <td>
                <% if(product.image == ""){%>
                <img id = "image_size" src="/images/noimage.png" alt="">
                <%} else{%>
                <img id = "image_size"  src="/product_images/<%= product.image%>">
                <%}%>
            </td>
           <td> <a href="/admin/products/edit-product/<%=product.slug%>">Edit</a> </td>-->
            <td><a class="confirmDelete" href="/admin/products/delete-product/<%=product._id%>">Delete</a></td>

        </tr>
        <% }) %>
    </tbody>
</table>
