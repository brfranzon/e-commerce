<h2 class="category-title">Edit a Category</h2>

<a href="/admin/pages" class="btn btn-primary">Back to all Categories</a>
<br><br>

<form method="POST" action="/admin/categories/edit-category/<%=title%>">

    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title%>" placeholder="Title">
    </div>


<input type="hidden" value="<%=id%>">
  <button class="btn btn-defaut border">Submit</button>

</form>


